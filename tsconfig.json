{
  "compilerOptions": {
    "target": "ESNext",
    "baseUrl": ".",
    "module": "ESNext",
    "moduleResolution": "node",
    "paths": {
      "dayjs": ["types/dayjs.d.ts"]
    },
    "resolveJsonModule": true,
    "typeRoots": ["./node_modules/@types", "./types"],
    "strict": true,
    "declaration": true,
    "outDir": "./dist",
    "esModuleInterop": true,
    "skipLibCheck": true
  },
  "exclude": ["dist", "node_modules", "playground"]
}

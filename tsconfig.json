{
  "compilerOptions": {
    "target": "ESNext",
    "lib": [
      "dom"
    ],
    "baseUrl": ".",
    "rootDir": ".",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "paths": {
      "dayjs": ["types/dayjs.d.ts"],
      "jspdf": ["types/jspdf.d.ts"],
      "qrcode": ["types/qrcode.d.ts"]
    },
    "resolveJsonModule": true,
    "typeRoots": ["./node_modules/@types", "./types"],
    "strict": true,
    "declaration": true,
    "outDir": "./dist",
    "esModuleInterop": true,
    "skipLibCheck": true
  },
  "exclude": ["dist", "node_modules", "playground"]
}

{
  "compilerOptions": {
    "target": "ESNext",
    "lib": ["dom"],
    "module": "ESNext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "isolatedModules": true,
    "skipLibCheck": true
  },
  "references": [
    { "path": "./packages/csv" },
    { "path": "./packages/date" },
    {
      "path": "./packages/vue-composables"
    }
  ],
  "include": [
    "packages/**/*.{ts,tsx,js,jsx}"
  ],
  "exclude": [
    "node_modules"
  ]
}

{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "lib": ["dom"],
    "strict": true,
    "esModuleInterop": true,
    "moduleResolution": "Bundler",
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "isolatedModules": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
  },
  "include": [
    "packages/**/*.{ts,tsx,js,jsx}"
  ],
  "exclude": [
    "node_modules"
  ],
  "references": [
    { "path": "./packages/csv" },
    { "path": "./packages/date" }
  ]
}